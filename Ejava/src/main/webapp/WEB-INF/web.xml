<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>com.example.ejava.RegistroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/RegistroServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.example.ejava.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CalculoIMCServlet</servlet-name>
        <servlet-class>com.example.ejava.CalculoIMCServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CalculoIMCServlet</servlet-name>
        <url-pattern>/CalculoIMCServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>IMCHistoricoServlet</servlet-name>
        <servlet-class>com.example.ejava.IMCHistoricoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IMCHistoricoServlet</servlet-name>
        <url-pattern>/IMCHistoricoServlet</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>